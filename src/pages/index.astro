<style>
    .page-wrapper {
        padding: 92px 96px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 300px;
    }
    .intro > h1 {
        color: #E7E7E7;
        font-size: 80px;
        font-weight: 800;
        line-height: normal;
        letter-spacing: -4px;
        margin-bottom: 30px;
    }
    .intro > h1 > span {
        color: #1F73F1;
        font-size: 50px;
        font-weight: 600;
        line-height: normal;
        letter-spacing: -2.8px;
        vertical-align: top;
    }
    .intro > h2 {
        color: #E7E7E7;
        font-size: 25px;
        font-weight: 400;
        line-height: normal;
        letter-spacing: -1px;
    }
    .intro > h3 {
        color: #979FAC;
        font-size: 25px;
        font-weight: 400;
        line-height: normal;
        letter-spacing: -1px;
        margin-bottom: 22px;
    }
    .intro > h3 > strong {
        font-weight: 600;
    }

    .links {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 20px;
        font-weight: 600;
        line-height: normal;
        letter-spacing: -0.8px;
        color: #E7E7E7;
    }

    .links > a {
        display: flex;
        gap: 5px;
    }
</style>
